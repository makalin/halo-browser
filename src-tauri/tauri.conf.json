{
  "build": {
    "beforeDevCommand": "flutter build web",
    "beforeBuildCommand": "flutter build web",
    "devPath": "build/web",
    "distDir": "build/web"
  },
  "package": {
    "productName": "Halo Browser",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.halobrowser.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Halo Browser",
        "width": 1200,
        "height": 800
      }
    ]
  }
} 